import javax.swing.*;
import java.awt.*;
/*TODO
 *	Multithread the program to have the switches and checking the box running at the
 * 	same instance
 * 
 * Add in the string format for the message and great the guide for it off screen
*/
public class gui {
	public static void main(String args[]) {
		Color p1Color[] = new Color[] {Color.black, Color.red, Color.green, Color.blue};
		Color p2Color[] = new Color[] {Color.black, Color.yellow, Color.blue, Color.red};
		
		JFrame window = new JFrame();
		window.setTitle("The Mysterious Signal");
		window.setSize(800, 600);
		window.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		Container pane = window.getContentPane();
		ColorPanel p1 = new ColorPanel(800, 200);
		ColorPanel p2 = new ColorPanel(800, 200);
		p1.fill(p1Color);
		p2.fill(p2Color);
		pane.setLayout(new FlowLayout());
		pane.add(p1, BorderLayout.WEST);
		pane.add(p2, BorderLayout.EAST);
		window.setVisible(true);
		
		//Iterations
		for(int i = 0; i < 4; i++) {
			p1.change(i);
			p2.change(i);
			try {
				Thread.sleep(5000);
			} catch(InterruptedException e) {
				System.out.print(e.getMessage());
			}
		}

	}
	
}
