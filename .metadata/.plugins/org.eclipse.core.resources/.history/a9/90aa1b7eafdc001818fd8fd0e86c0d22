public class gui {
	public static void main(String args[]) {
		Color p1Color[] = new Color[] {Color.black, Color.red, Color.green, Color.blue};
		Color p2Color[] = new Color[] {Color.black, Color.yellow, Color.blue, Color.red};
		
		JFrame window = new JFrame();
		window.setTitle("The Mysterious Signal");
		window.setSize(800, 600);
		window.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		Container pane = window.getContentPane();
		ColorPanel p1 = new ColorPanel();
		p1.fill(p1Color);
		pane.add(p1);
		window.setVisible(true);
		
		//Iterations
		p1.timedRun(5);

	}
	
